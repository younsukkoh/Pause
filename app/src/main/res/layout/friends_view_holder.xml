<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="?android:attr/selectableItemBackground"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fvh_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"/>
            <TextView
                android:id="@+id/fvh_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"/>
            <TextView
                android:id="@+id/fvh_tv_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birthday"/>
            <TextView
                android:id="@+id/fvh_tv_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fvh_fab_friended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_green"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_margin="4dp"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fvh_fab_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/x_red"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_margin="4dp"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>