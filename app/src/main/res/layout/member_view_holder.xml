<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/item_activated_foreground"
    android:padding="4dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/mvh_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"/>
            <TextView
                android:id="@+id/mvh_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"/>
            <TextView
                android:id="@+id/mvh_tv_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birthday"/>
            <TextView
                android:id="@+id/mvh_tv_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"/>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/mvh_fab_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:foreground="@drawable/item_activated_foreground" />
    </RelativeLayout>

</android.support.v7.widget.CardView>